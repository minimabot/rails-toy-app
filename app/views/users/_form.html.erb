
<div class="py-8 px-4 rounded-xl bg-white">
	<%= form_with(model: user, class: "contents") do |f| %>
		<% if user.errors.any? %>
			<div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
				<h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>
				<ul>
					<% user.errors.each do |error| %>
						<li><%= error.full_message %></li>
					<% end %>
				</ul>
			</div>
		<% end %>
		<div class="flex flex-col">
			<%= f.label :last_name %>
			<%= f.text_field :last_name, class: 'form-control rounded' %>
		</div>
		<div class="flex flex-col">
			<%= f.label :first_name%>
			<%= f.text_field :first_name, class: 'form-control rounded' %>
		</div>
		<div class="flex flex-col">
			<%= f.label :nickname %>
			<%= f.text_field :nickname, class: 'form-control rounded' %>
		</div>
		<div class="flex flex-col">
			<%= f.label :email %>
			<%= f.email_field :email, class: 'form-control rounded' %>
		</div>
		<div class="flex flex-col">
			<%= f.label :password %>
			<%= f.password_field :password, class: 'form-control rounded' %>
		</div>
		<div class="flex flex-col">
			<%= f.label :password_confirmation, "Confirmation" %>
			<%= f.password_field :password_confirmation, class: 'form-control rounded' %>
		</div>
		<div class="mt-8">
			<%= f.submit class: "rounded-lg py-2 px-5 bg-blue-600 text-white block text-sm cursor-pointer" %>
		</div>
	<% end %>
</div>
